{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "removeComments": true,
        "noUnusedLocals": true,
        "target": "es2020",
        "lib": ["es2020"],
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": ""
    },
    "include": ["./**/*.ts"],
    "exclude": [
      "node_modules/**/*",
      ".serverless/**/*",
      ".webpack/**/*",
      "_warmup/**/*",
      ".vscode/**/*"
    ]
  }